#!/usr/bin/env ruby

def comment_str(type)
  case type
  when "c"
    "//"
  else
    "#"
  end 
end

type = "ruby"
s = comment_str(type)

lines = $stdin.read.split("\n")

already_has_comment = lines.first.strip.start_with? s

if already_has_comment
  lines.each do |l|
    puts l.sub(/^(\s*)#{s} ?/, "\\1")
  end
else
  lines.each do |l|
    puts l.sub(/^(\s*)/, "\\1#{s} ")
  end
end